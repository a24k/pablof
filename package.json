{
  "name": "pablof",
  "version": "0.3.0",
  "description": "a Productive Assistant for a Better Life OF you, your team, your family and our world.",
  "author": "Atsushi KAWASAKI",
  "private": true,
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/a24k/pablof.git"
  },
  "license": "MIT",
  "main": "lib/main.js",
  "scripts": {
    "codegen": "graphql-codegen --config codegen.yml",
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "npx eslint --ext .ts src/",
    "package": "ncc build --minify --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run codegen && npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "@octokit/webhooks-types": "^6.11.0",
    "graphql": "^16.6.0",
    "neverthrow": "^6.0.0"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^4.0.1",
    "@graphql-codegen/cli": "^3.3.1",
    "@graphql-codegen/client-preset": "^4.0.1",
    "@graphql-codegen/fragment-matcher": "^4.0.1",
    "@graphql-codegen/introspection": "^3.0.1",
    "@graphql-codegen/typescript": "^3.0.4",
    "@graphql-codegen/typescript-generic-sdk": "^3.1.0",
    "@graphql-codegen/typescript-operations": "^3.0.4",
    "@types/node": "^20.2.3",
    "@typescript-eslint/parser": "^5.59.0",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.38.0",
    "eslint-plugin-github": "^4.7.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-neverthrow": "^1.1.4",
    "jest": "^29.5.0",
    "js-yaml": "^4.1.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  }
}
